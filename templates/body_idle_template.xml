<?xml version="1.0" encoding="utf-8"?>
<!--
    BODY ANIMATION TEMPLATE: IDLE STATE

    Usage:
    1. Copy to media/AnimSets/player/idle/
    2. Rename to idle_<yourtype>.xml
    3. Replace all PLACEHOLDER values
    4. Update transitions to match your other states
-->
<animNode>
    <!-- State name - referenced by transitions from other states -->
    <m_Name>Idle__PLACEHOLDER_TYPE__</m_Name>

    <!-- Animation name - must match AnimationSet name in your .X file -->
    <m_AnimName>Bob_Idle__PLACEHOLDER_TYPE__</m_AnimName>

    <m_deferredBoneAxis>Y</m_deferredBoneAxis>
    <m_Priority>10</m_Priority>
    <m_ConditionPriority>10</m_ConditionPriority>
    <m_SpeedScale>0.48</m_SpeedScale>
    <m_BlendTime>0.10</m_BlendTime>

    <!-- Scalars for animation speed variation -->
    <m_Scalar>IdleSpeed</m_Scalar>
    <m_Scalar2>IdleSpeed</m_Scalar2>

    <!-- CONDITION: When Weapon variable equals this value, use this animation -->
    <m_Conditions>
        <m_Name>Weapon</m_Name>
        <m_Type>STRING</m_Type>
        <m_StringValue>__PLACEHOLDER_WEAPON_VALUE__</m_StringValue>
    </m_Conditions>

    <!-- 2D Blend space (optional - for directional idle sway) -->
    <m_2DBlends referenceID="1">
        <m_AnimName>Bob_Idle__PLACEHOLDER_TYPE__</m_AnimName>
        <m_XPos>0.00</m_XPos>
        <m_YPos>0.00</m_YPos>
        <m_SpeedScale>0.80</m_SpeedScale>
    </m_2DBlends>
    <m_2DBlends referenceID="2">
        <m_AnimName>Bob_Idle__PLACEHOLDER_TYPE__</m_AnimName>
        <m_XPos>0.00</m_XPos>
        <m_YPos>1.00</m_YPos>
        <m_SpeedScale>0.80</m_SpeedScale>
    </m_2DBlends>
    <m_2DBlends referenceID="3">
        <m_AnimName>Bob_Idle__PLACEHOLDER_TYPE__</m_AnimName>
        <m_XPos>0.00</m_XPos>
        <m_YPos>0.04</m_YPos>
        <m_SpeedScale>0.80</m_SpeedScale>
    </m_2DBlends>
    <m_2DBlendTri>
        <node1>1</node1>
        <node2>2</node2>
        <node3>3</node3>
    </m_2DBlendTri>

    <!-- TRANSITIONS: Define paths to other states -->

    <!-- Idle -> Walk -->
    <m_Transitions>
        <m_Target>walk__PLACEHOLDER_TYPE__</m_Target>
        <m_AnimName>Bob_Walk__PLACEHOLDER_TYPE__</m_AnimName>
        <m_blendInTime>0.1</m_blendInTime>
        <m_blendOutTime>0.1</m_blendOutTime>
        <m_Conditions>
            <m_Name>isTurningAround</m_Name>
            <m_Type>BOOL</m_Type>
            <m_BoolValue>false</m_BoolValue>
        </m_Conditions>
    </m_Transitions>

    <!-- Idle -> Run -->
    <m_Transitions>
        <m_Target>run__PLACEHOLDER_TYPE__</m_Target>
        <m_AnimName>Bob_Walk__PLACEHOLDER_TYPE__</m_AnimName>
        <m_blendInTime>0.1</m_blendInTime>
        <m_blendOutTime>0.1</m_blendOutTime>
        <m_Conditions>
            <m_Name>isTurningAround</m_Name>
            <m_Type>BOOL</m_Type>
            <m_BoolValue>false</m_BoolValue>
        </m_Conditions>
    </m_Transitions>

    <!-- Idle -> Sprint -->
    <m_Transitions>
        <m_Target>sprint__PLACEHOLDER_TYPE__</m_Target>
        <m_blendInTime>0.1</m_blendInTime>
        <m_blendOutTime>0.5</m_blendOutTime>
        <m_Conditions>
            <m_Name>isTurningAround</m_Name>
            <m_Type>BOOL</m_Type>
            <m_BoolValue>false</m_BoolValue>
        </m_Conditions>
    </m_Transitions>

    <!-- Idle -> Climb (vanilla transition) -->
    <m_Transitions>
        <m_Target>climbFenceStart</m_Target>
        <m_blendInTime>0.1</m_blendInTime>
    </m_Transitions>

    <!-- Idle -> Turn (vanilla transition) -->
    <m_Transitions>
        <m_Target>turn_idle</m_Target>
        <m_blendInTime>0.1</m_blendInTime>
    </m_Transitions>
</animNode>
